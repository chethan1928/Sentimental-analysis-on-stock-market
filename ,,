def main():
    # CHANGE THIS PATH TO YOUR FILE
    input_path = r"C:\Users\arpichau\Downloads\Question_evaluation\Input_files\hindi-question-paper_434b8d..pdf"
    # input_path = r"C:\path\to\your\input_file.docx"

    save_json = True  # set False if you do not want JSON output
    language = "hindi"  # e.g. telugu, tamil, hindi, english

    if not os.path.exists(input_path):
        print(f"File not found: {input_path}")
        return

    print(f"Evaluating file: {input_path}")

    if should_use_special_azure_flow(language):
        highlighted_docx, final_docx, markdown, results = evaluate_document_special_azure(
            input_path=input_path,
            save_json=save_json,
            language=language
        )
    else:
        highlighted_docx, final_docx, markdown, results = evaluate_document(
            input_path=input_path,
            save_json=save_json
        )

    if not results:
        print("Evaluation failed.")
        return

    print("\nEvaluation completed successfully!")
    print(f"Highlighted DOCX: {highlighted_docx}")
    print(f"Final Corrected DOCX: {final_docx}")

    if save_json:
        json_path = input_path.replace(".pdf", "_analysis.json").replace(".docx", "_analysis.json")
        print(f"JSON saved at: {json_path}")

    print("\nMarkdown report is available in `markdown` variable.")


if __name__ == "__main__":
    main()


async def generate_and_save_question_evaluate(user_id, data:Dict, file:UploadFile, db:Session):
    tool = get_tool(data.get("tool_id"), db)

    # Save uploaded file
    data['files'] = await save_file([file])

    sources = {
        "youtube": data.get("video_links", []),
        "websites": data.get("website_links", []),
        "files": data.get("files") if data.get("files", None) else [],
        "text": [data.get("text")] if data.get("text", None) else []
    }

    # Unpack 4 values
    highlighted_docx, final_docx, markdown_content, generated_json = evaluate_document(
        data.get("files")[0],
        language=data.get("language"),
    )

    if markdown_content is None:
        handle_error("Markdown content could not be generated", 500)

    title = get_title(highlighted_docx, markdown_content)

    resource = Resource(
        user_id=user_id,
        tool_id=data.get("tool_id"),
        course_id=data.get("course_id"),
        unit_id=data.get("unit_id"),
        lesson_id=data.get("lesson_id"),
        lesson_plan_id = data.get("lesson_plan_id"),
        grade=data.get("grade_level"),
        language=data.get("language"),
        title=title,
        query=data.get("query"),
        depth_of_knowledge=data.get("depth_of_knowledge"),
        lexile_read_level=data.get("lexile_reading_levels"),
        blooms_taxonomy=data.get("blooms_taxonomy"),
        selected_standard_set=data.get("standard_curriculum_id"),
        selected_standard_course=data.get("standard_course_id"),
        standard = data.get("standard")
    )
    db.add(resource)
    db.commit()
    db.refresh(resource)

    highlighted_url = Path(highlighted_docx).as_posix()
    final_url = Path(final_docx).as_posix()

    resource_version = ResourceVersion(
        title=title,
        resource_id=resource.id,
        version_number=get_resource_version(resource.id, db),
        content=json.dumps({
            "text": markdown_content,
            "highlighted_path": f"{settings.PROJECT_BASE_URL}/{highlighted_url}",
            "final_path": f"{settings.PROJECT_BASE_URL}/{final_url}"
        }),
        generated_json=generated_json
    )
    db.add(resource_version)
    db.commit()
    db.refresh(resource_version)

    process_source_material(db, resource.id, sources)
    return resource.id



async def generate_and_update_question_evaluate(user_id, data:dict, file:UploadFile, db:Session):
    resource:Resource = get_resource(data.get("resource_id"), db)

    file_path = None
    if file:
        data['files'] = await save_file([file])
        file_path = data.get("files")[0]

    request_sources = {
        "youtube": data.get("video_links", []),
        "websites": data.get("website_links", []),
        "files": data.get("files") if data.get("files", None) else [],
        "text": [data.get("text")] if data.get("text", None) else []
    }
    process_source_material(db, data.get("resource_id"), request_sources)

    sources = get_existing_source_material(data.get("resource_id"), request_sources, db)

    if not file_path:
        try:
            all_files = sources.get("files")
            if len(all_files) <= 0:
                handle_error("Existing file not found", 404)
            file_path = all_files[0]
        except:
            handle_error("Unable to handle request due to invalid data")

    # Unpack 4 values
    highlighted_docx, final_docx, markdown_content, generated_json = evaluate_document(
        file_path,
        language=data.get("language") or getattr(resource, "language", None),
    )

    if markdown_content is None:
        handle_error("Markdown content could not be generated", 500)

    title = get_title(highlighted_docx, markdown_content)

    # Update resource fields
    resource.user_id = user_id
    resource.tool_id = data.get("tool_id")
    resource.course_id = data.get("course_id")
    resource.unit_id = data.get("unit_id")
    resource.lesson_id = data.get("lesson_id")
    # resource.lesson_plan_id = data.get("lesson_plan_id")
    resource.grade = data.get("grade_level")
    resource.language = data.get("language")
    resource.title = title
    resource.query = data.get("query")
    resource.depth_of_knowledge = data.get("depth_of_knowledge")
    resource.lexile_read_level = data.get("lexile_reading_levels")
    resource.blooms_taxonomy = data.get("blooms_taxonomy")
    resource.selected_standard_set = data.get("standard_curriculum_id")
    resource.selected_standard_course = data.get("standard_course_id")
    resource.standard = data.get("standard")

    db.commit()
    db.refresh(resource)

    highlighted_url = Path(highlighted_docx).as_posix()
    final_url = Path(final_docx).as_posix()

    resource_version = ResourceVersion(
        title=title,
        resource_id=resource.id,
        version_number=get_resource_version(resource.id, db),
        content=json.dumps({
            "text": markdown_content,
            "highlighted_path": f"{settings.PROJECT_BASE_URL}/{highlighted_url}",
            "final_path": f"{settings.PROJECT_BASE_URL}/{final_url}"
        }),
        generated_json=generated_json
    )
    db.add(resource_version)
    db.commit()
    db.refresh(resource_version)

    return resource_version

