@router.put("/quick-update-image")
async def quick_update_image(
    resource_id:int = Form(...),
    query: str = Form(...),
    current_user: User = Depends(get_current_user([UserRole.ADMIN, UserRole.USER])),
    db: Session = Depends(get_db)
):
    data = {"resource_id": resource_id, "query": query}
    generated_data = await enhance_and_update_existing_image(
        current_user.id,
        data,
        db
    )
    return generated_data

@router.post("/question-evaluation/")
async def question_evaluation(
    file: UploadFile = File(...),
    tool_id:int = Form(...),
    grade_level:str = Form("Class 10"),
    language:str = Form("English"),
    # data: Dict = Depends(get_common_fields),
    current_user: User = Depends(get_current_user([UserRole.ADMIN, UserRole.USER])),
    db: Session = Depends(get_db)
):
    # Check file type
    allowed_extensions = {"pdf", "docx"}
    file_ext = file.filename.split(".")[-1].lower()
    data = {
        "tool_id":tool_id,
        "grade_level":grade_level,
        "language":language,
    }

    if file_ext not in allowed_extensions:
        handle_error("Only pdf and docx files are allowed.", 400)

    resource_id = await generate_and_save_question_evaluate(current_user.id, data, file, db)
        
    return {"message": "Question evaluated successfully", "resource_id": resource_id}

@router.post("/update-question-evaluation/")
async def update_question_evaluation(
    resource_id:int = Form(...),
    file: UploadFile = File(None),
    tool_id:int = Form(...),
    grade_level:str = Form("Class 10"),
    language:str = Form("English"),
    # data: Dict = Depends(get_common_fields),
    current_user: User = Depends(get_current_user([UserRole.ADMIN, UserRole.USER])),
    db: Session = Depends(get_db)
):
    # Check file type
    allowed_extensions = {"pdf", "docx"}

    file_ext = file.filename.split(".")[-1].lower() if file else None
    data = {
        "tool_id":tool_id,
        "resource_id":resource_id,
        "grade_level":grade_level,
        "language":language,
    }

    if file and file_ext not in allowed_extensions:
        handle_error("Only pdf and docx files are allowed.", 400)

    generated_data = await generate_and_update_question_evaluate(current_user.id, data, file, db)
    return generated_data

@router.put("/quick-update-question-evaluation")
async def quick_update_question_evaluation(
    resource_id:int = Form(...),
    query: str = Form(...),
    current_user: User = Depends(get_current_user([UserRole.ADMIN, UserRole.USER])),
    db: Session = Depends(get_db)
):
    data = {"resource_id": resource_id, "query": query}
    generated_data = await enhance_and_update_existing_question_evaluate(
        current_user.id,
        data,
        db
    )
    return generated_data

